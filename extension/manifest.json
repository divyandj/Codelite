{
    "manifest_version" : 3,
    "name" : "Ishaara",
    "description" : "An extension that converts YouTube videos into Sign Language",
    "version" : "1.0",
    "permissions" : ["activeTab","declarativeContent"],
    "host_permissions" : ["http://127.0.0.1:5000/*"],

    "action" : {
        "default_title" : "Convert To Sign Language",
        "default_icon":{
            "16":"images/icon.png",
            "32":"images/icon.png",
            "48":"images/icon.png",
            "128":"images/icon.png"
        },
        "default_popup":"popup.html"
    },

    "icons": {
        "16":"images/icon.png",
        "32":"images/icon.png",
        "48":"images/icon.png",
        "128":"images/icon.png"
    }
}